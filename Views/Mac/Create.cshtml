@model Mac
@{
    ViewData["Title"] = "Yeni Maç Ekle";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="fas fa-plus"></i> Yeni Maç Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EvSahibi" class="form-label">Ev Sahibi</label>
                                    <input asp-for="EvSahibi" class="form-control" />
                                    <span asp-validation-for="EvSahibi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Deplasman" class="form-label">Deplasman</label>
                                    <input asp-for="Deplasman" class="form-control" />
                                    <span asp-validation-for="Deplasman" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MacTarihi" class="form-label">Maç Tarihi</label>
                                    <input asp-for="MacTarihi" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="MacTarihi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Skor" class="form-label">Skor</label>
                                    <input asp-for="Skor" class="form-control" placeholder="2-1" />
                                    <span asp-validation-for="Skor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Liga" class="form-label">Lig</label>
                                    <select asp-for="Liga" class="form-select">
                                        <option value="Süper Lig">Süper Lig</option>
                                        <option value="1. Lig">1. Lig</option>
                                        <option value="2. Lig">2. Lig</option>
                                        <option value="3. Lig">3. Lig</option>
                                    </select>
                                    <span asp-validation-for="Liga" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Hafta" class="form-label">Hafta</label>
                                    <input asp-for="Hafta" class="form-control" type="number" min="1" max="38" />
                                    <span asp-validation-for="Hafta" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
