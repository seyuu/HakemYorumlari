@model Pozisyon
@{
    ViewData["Title"] = "Yeni Pozisyon Ekle";
    Layout = "_Layout";
    var maclar = ViewBag.Maclar as IEnumerable<Mac>;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="fas fa-plus"></i> Yeni Pozisyon Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="PozisyonEkle" method="post">
                        <div class="mb-3">
                            <label asp-for="MacId" class="form-label">Maç Seçiniz</label>
                            <select asp-for="MacId" class="form-select">
                                <option value="">Maç Seçiniz</option>
                                @if (maclar != null)
                                {
                                    @foreach (var mac in maclar)
                                    {
                                        <option value="@mac.Id">@mac.EvSahibi vs @mac.Deplasman (@mac.MacTarihi.ToString("dd.MM.yyyy"))</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="MacId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Pozisyon açıklaması"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dakika" class="form-label">Dakika</label>
                                    <input asp-for="Dakika" type="number" min="1" max="120" class="form-control" />
                                    <span asp-validation-for="Dakika" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PozisyonTuru" class="form-label">Pozisyon Türü</label>
                                    <select asp-for="PozisyonTuru" class="form-select">
                                        <option value="">Tür Seçiniz</option>
                                        <option value="Penaltı">Penaltı</option>
                                        <option value="Kırmızı Kart">Kırmızı Kart</option>
                                        <option value="Sarı Kart">Sarı Kart</option>
                                        <option value="Gol">Gol</option>
                                        <option value="Ofsayt">Ofsayt</option>
                                        <option value="Faul">Faul</option>
                                        <option value="El Değmesi">El Değmesi</option>
                                        <option value="Diğer">Diğer</option>
                                    </select>
                                    <span asp-validation-for="PozisyonTuru" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label">Video URL</label>
                            <input asp-for="VideoUrl" type="url" class="form-control" placeholder="https://..." />
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Pozisyonlar" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}