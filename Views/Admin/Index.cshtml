@{
    ViewData["Title"] = "Admin Paneli";
    var stats = ViewBag.Stats;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4"><i class="fas fa-tachometer-alt"></i> Admin Paneli</h1>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalMaclar</h4>
                            <p class="mb-0">Toplam Maç</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-futbol fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalPozisyonlar</h4>
                            <p class="mb-0">Toplam Pozisyon</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-video fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalHakemYorumlari</h4>
                            <p class="mb-0">Hakem Yorumu</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-comments fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalOylar</h4>
                            <p class="mb-0">Kullanıcı Oyu</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-poll fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Menüsü -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Yönetim Paneli</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Maclar", "Admin")" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-futbol fa-2x d-block mb-2"></i>
                                Maç Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Pozisyonlar", "Admin")" class="btn btn-outline-success btn-lg w-100">
                                <i class="fas fa-video fa-2x d-block mb-2"></i>
                                Pozisyon Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("HakemYorumlari", "Admin")" class="btn btn-outline-warning btn-lg w-100">
                                <i class="fas fa-comments fa-2x d-block mb-2"></i>
                                Hakem Yorumları
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("KullaniciOylari", "Admin")" class="btn btn-outline-info btn-lg w-100">
                                <i class="fas fa-poll fa-2x d-block mb-2"></i>
                                Kullanıcı Oyları
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>