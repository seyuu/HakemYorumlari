@{
    ViewData["Title"] = "Admin Paneli";
    var stats = ViewBag.Stats;
}

@* Anti-forgery token ekle *@
@Html.AntiForgeryToken()

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4"><i class="fas fa-tachometer-alt"></i> Admin Paneli</h1>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalMaclar</h4>
                            <p class="mb-0">Toplam Maç</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-futbol fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalPozisyonlar</h4>
                            <p class="mb-0">Toplam Pozisyon</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-video fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalHakemYorumlari</h4>
                            <p class="mb-0">Hakem Yorumu</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-comments fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@stats.TotalOylar</h4>
                            <p class="mb-0">Kullanıcı Oyu</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-poll fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- YENİ: Job Başlatma Paneli -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-play-circle"></i> Otomatik İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-week fa-3x text-primary mb-3"></i>
                                    <h6>Mevcut Hafta Yorum Toplama</h6>
                                    <p class="text-muted small">Bu haftanın tüm maçları için YouTube'dan yorum toplar</p>
                                    <button class="btn btn-primary btn-sm" onclick="startCurrentWeekJob()">
                                        <i class="fas fa-play"></i> Başlat
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-list-ol fa-3x text-warning mb-3"></i>
                                    <h6>Belirli Hafta Yorum Toplama</h6>
                                    <div class="input-group input-group-sm mb-2">
                                        <input type="number" class="form-control" id="haftaInput" placeholder="Hafta" min="1" max="38" value="1">
                                    </div>
                                    <button class="btn btn-warning btn-sm" onclick="startWeekJob()">
                                        <i class="fas fa-play"></i> Başlat
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-eye fa-3x text-info mb-3"></i>
                                    <h6>İşlem Durumu Takibi</h6>
                                    <p class="text-muted small">Aktif işlemleri görüntüle ve takip et</p>
                                    <a href="@Url.Action("JobDurumu", "Admin")" class="btn btn-info btn-sm">
                                        <i class="fas fa-external-link-alt"></i> Görüntüle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Menüsü -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Yönetim Paneli</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Maclar", "Admin")" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-futbol fa-2x d-block mb-2"></i>
                                Maç Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Pozisyonlar", "Admin")" class="btn btn-outline-success btn-lg w-100">
                                <i class="fas fa-video fa-2x d-block mb-2"></i>
                                Pozisyon Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("HakemYorumlari", "Admin")" class="btn btn-outline-warning btn-lg w-100">
                                <i class="fas fa-comments fa-2x d-block mb-2"></i>
                                Hakem Yorumları
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("KullaniciOylari", "Admin")" class="btn btn-outline-info btn-lg w-100">
                                <i class="fas fa-poll fa-2x d-block mb-2"></i>
                                Kullanıcı Oyları
                            </a>
                        </div>
                    </div>
                    
                    <!-- Fikstür Güncelleme -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="alert alert-warning">
                                <h6><i class="fas fa-exclamation-triangle"></i> Fikstür Güncelleme</h6>
                                <p class="mb-3">TFF sitesinden güncel fikstürü çekmek için aşağıdaki butona tıklayın. Bu işlem mevcut tüm maçları siler ve yenilerini ekler.</p>
                                <form method="post" action="@Url.Action("FiksturuGuncelle", "Admin")" onsubmit="return confirm('Tüm mevcut maçlar silinecek ve TFF sitesinden yeni fikstür çekilecek. Devam etmek istediğinizden emin misiniz?')">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-sync-alt"></i> TFF Fikstürünü Güncelle
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function startCurrentWeekJob() {
    if (confirm('Mevcut hafta için yorum toplama işlemini başlatmak istediğinizden emin misiniz?')) {
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        
        fetch('/Admin/MevcutHaftaYorumBaslat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('İşlem başlatıldı! Job ID: ' + data.jobId);
                // Job durumu sayfasına yönlendir
                window.location.href = '/Admin/JobDurumu';
            } else {
                alert('Hata: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Hata:', error);
            alert('Bir hata oluştu!');
        });
    }
}

function startWeekJob() {
    const hafta = document.getElementById('haftaInput').value;
    if (!hafta || hafta < 1 || hafta > 38) {
        alert('Lütfen 1-38 arası geçerli bir hafta numarası girin!');
        return;
    }
    
    if (confirm(`Hafta ${hafta} için yorum toplama işlemini başlatmak istediğinizden emin misiniz?`)) {
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        
        fetch('/Admin/HaftaTopluYorumBaslat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify({ hafta: parseInt(hafta) })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('İşlem başlatıldı! Job ID: ' + data.jobId);
                // Job durumu sayfasına yönlendir
                window.location.href = '/Admin/JobDurumu';
            } else {
                alert('Hata: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Hata:', error);
            alert('Bir hata oluştu!');
        });
    }
}
</script>