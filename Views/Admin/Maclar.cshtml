@if (TempData["JobId"] != null)
{
    <div class="progress mb-3" id="jobProgress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" 
             role="progressbar" 
             id="progressBar"
             style="width: 0%" 
             aria-valuenow="0" 
             aria-valuemin="0" 
             aria-valuemax="100">
            <span id="progressText">Ba≈ülatƒ±lƒ±yor...</span>
        </div>
    </div>
}

<script>
    // Hafta se√ßici deƒüi≈ütiƒüinde sayfayƒ± yeniden y√∂nlendirir.
    function haftaSecildi() {
        var hafta = document.getElementById('haftaSecici').value;
        window.location.href = '/Admin/Maclar?hafta=' + hafta;
    }

    // Arka plan i≈ülerinin durumunu kontrol eder ve progress bar'ƒ± g√ºnceller.
    function checkJobStatus() {
        const jobId = '@TempData["JobId"]';
        if (!jobId) return;
        
        fetch('/Admin/GetJobStatus?jobId=' + jobId)
            .then(response => response.json())
            .then(data => {
                const progressBar = document.getElementById('progressBar');
                const progressText = document.getElementById('progressText');
                
                if (!progressBar || !progressText) return;

                if (data.status === 'Running') {
                    progressBar.style.width = data.progress + '%';
                    progressBar.setAttribute('aria-valuenow', data.progress);
                    progressText.textContent = data.message;
                    setTimeout(checkJobStatus, 10000); // 10 saniyede bir tekrar kontrol et
                } else if (data.status === 'Completed') {
                    progressBar.style.width = '100%';
                    progressBar.setAttribute('aria-valuenow', 100);
                    progressText.textContent = 'Tamamlandƒ±!';
                    progressBar.classList.remove('progress-bar-animated');
                    progressBar.classList.add('bg-success');
                } else if (data.status === 'Failed') {
                    progressBar.classList.remove('progress-bar-animated');
                    progressBar.classList.add('bg-danger');
                    progressText.textContent = 'Hata: ' + data.message;
                }
            })
            .catch(error => {
                console.error('Job status kontrol√º hatasƒ±:', error);
            });
    }

    // Sayfa y√ºklendiƒüinde, eƒüer bir JobId varsa durum kontrol√ºn√º ba≈ülat.
    @if (TempData["JobId"] != null)
    {
        <text>
        document.addEventListener('DOMContentLoaded', function() {
            checkJobStatus();
        });
        </text>
    }
</script>