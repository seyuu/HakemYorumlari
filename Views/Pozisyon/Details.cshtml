                                <div class="vote-buttons">
                                    <button type="submit" name="dogruKarar" value="true" class="vote-btn vote-correct">
                                        ‚úÖ Doƒüru Karar
                                    </button>
                                    <button type="submit" name="dogruKarar" value="false" class="vote-btn vote-incorrect">
                                        ‚ùå Yanlƒ±≈ü Karar
                                    </button>
                                </div>
                                @Html.AntiForgeryToken()
                            </form>
                        </div>
                    }

                    <!-- Sonu√ß Grafikleri -->
                    @if (ViewBag.ToplamOy > 0)
                    {
                        <div class="vote-results">
                            <h6>üìä Anket Sonu√ßlarƒ± (@ViewBag.ToplamOy oy)</h6>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>‚úÖ Doƒüru (@ViewBag.DogruOylar oy)</span>
                                    <span>@ViewBag.DogruYuzde.ToString("F1")%</span>
                                </div>
