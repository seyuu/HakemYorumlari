        <div class="card-body">
            <h6 class="card-title">@yorum.YorumcuAdi</h6>
            <p class="card-text">@yorum.Yorum</p>
            @if (!string.IsNullOrEmpty(yorum.KaynakLink))
            {
                <a href="@yorum.KaynakLink" target="_blank" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-external-link-alt"></i> 
                    @(yorum.KaynakTuru == "YouTube" ? "YouTube'da ƒ∞zle" : 
                      yorum.KaynakTuru == "Gazete" ? "Haberi Oku" : "Web Sitesinde G√∂r")
