</div>

@section Scripts {
    <script>
        // Oy verme butonlarƒ±na tƒ±klandƒ±ƒüƒ±nda loading g√∂ster
        document.querySelectorAll('.vote-btn').forEach(button => {
            button.addEventListener('click', function() {
                this.innerHTML = '<span class="loading"></span> Kaydediliyor...';
                this.disabled = true;
            });
        });
    </script>
}

<!-- Video b√∂l√ºm√ºne embed player ekle -->
@if (!string.IsNullOrEmpty(Model.EmbedVideoUrl))
{
    <div class="video-container mb-4">
        <h5>Pozisyon Videosu</h5>
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="@Model.EmbedVideoUrl" allowfullscreen></iframe>
        </div>
