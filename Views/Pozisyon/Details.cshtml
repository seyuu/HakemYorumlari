                            <form asp-action="Vote" method="post" class="d-inline">
                                <input type="hidden" name="pozisyonId" value="@Model.Id" />
                                <div class="vote-buttons">
                                    <button type="submit" name="dogruKarar" value="true" class="vote-btn vote-correct">
                                        ‚úÖ Doƒüru Karar
