@model IEnumerable<HakemYorumlari.Models.Mac>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">⚽ Hakem Yorumları - Futbolun Tartışmalı Anları</h1>
                </div>
                <div class="card-body">
                    <p class="lead">Her hafta oynanan maçlardaki tartışmalı pozisyonlar için hakem yorumcularının görüşlerini inceleyin ve kendi oyunuzu kullanın!</p>
                    
                    <div class="row text-center mt-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3 class="text-success">@ViewBag.ToplamPozisyon</h3>
                                    <p class="mb-0">Toplam Pozisyon</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3 class="text-primary">@ViewBag.ToplamYorum</h3>
                                    <p class="mb-0">Hakem Yorumu</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3 class="text-warning">@ViewBag.ToplamOy</h3>
                                    <p class="mb-0">Kullanıcı Oyu</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">🔥 Son Maçlar</h2>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var mac in Model)
                        {
                            <div class="match-card card mb-3">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h5 class="card-title match-score">
                                                @mac.EvSahibi vs @mac.Deplasman
                                                @if (!string.IsNullOrEmpty(mac.Skor))
                                                {
                                                    <span class="badge bg-success ms-2">@mac.Skor</span>
                                                }
                                            </h5>
                                            <p class="match-date">
                                                📅 @mac.MacTarihi.ToString("dd.MM.yyyy HH:mm") - @mac.Liga (@mac.Hafta. Hafta)
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            @if (mac.Pozisyonlar.Any())
                                            {
                                                <span class="badge bg-warning text-dark me-2">
                                                    🎯 @mac.Pozisyonlar.Count Pozisyon
                                                </span>
                                                <span class="badge bg-info text-dark">
                                                    💬 @mac.Pozisyonlar.Sum(p => p.HakemYorumlari.Count) Yorum
                                                </span>
                                            }
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <a href="@Url.Action("Details", "Mac", new { id = mac.Id })" class="btn btn-primary">
                                                Detaylar
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h4>Henüz maç verisi bulunmuyor</h4>
                            <p class="text-muted">Yakında maç verileri eklenecek!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
